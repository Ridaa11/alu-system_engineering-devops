#!/usr/bin/env bash
# Script that installs and configures Nginx to serve a page containing "Holberton School"

# Exit on any error
set -e

# Update package list
apt-get update -y

# Install nginx
apt-get install -y nginx

# Create a simple HTML page
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# Make sure nginx is listening on port 80
# (default config already does this, but we ensure the service is started)
service nginx start

