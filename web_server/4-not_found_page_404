#!/usr/bin/env bash
# Configures an Ubuntu server with Nginx to serve a custom 404 page containing "Ceci n'est pas une page"

# Exit immediately if a command exits with a non-zero status
set -e

# Update package lists and install Nginx
apt-get update -y
apt-get install -y nginx

# Create the custom 404 page with the required text
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Update Nginx default configuration to use the custom 404 page
sed -i '/error_page 404/d' /etc/nginx/sites-available/default
sed -i '/server_name _;/a \\n\t# Custom 404 page\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx to apply configuration changes
systemctl restart nginx

